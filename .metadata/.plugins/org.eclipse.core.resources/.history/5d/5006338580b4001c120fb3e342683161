package day0405;

public class Ex01ShopArray {
	public static void main(String[] args) {
		// Shop을 배열에 담고자 할 경우
		Shop[] shop = new Shop[3]; // 메모리 할당
		shop[0] = new Shop();
		shop[1] = new Shop("딸기");
		shop[2] = new Shop("복숭아", 5, 2000);
		
		// 두 번째 방법
		Shop[] shop2 = {
				new Shop(),
				new Shop("딸기우유"), 
				new Shop("초코렛"),
				new Shop("브라보콘", 3, 1200)
		};
		
		// 출력
		System.out.println("shop 은 총 " + shop.length + "개");
		for(int i=0; i<shop.length; i++) {
			System.out.println(shop[i].getSangpum() + "\t" + 
					shop[i].getSu() + "\t" + shop[i].getDan() + "\t"
					+ shop[i].getResult());
		}
	}
}
